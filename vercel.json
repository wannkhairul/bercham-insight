{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [

    { "source": "/", "destination": "/public/index.html" },
    { "source": "/(.*\\.(?:css|js|html|png|jpg|gif))", "destination": "/public/$1" },
    { "source": "/admin", "destination": "/public/admin.html" }
  ]
}