{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  
  "routes": [
    
    { "src": "/", "dest": "/public/index.html" },
    
    { "src": "/admin", "dest": "/public/admin.html" },
    
    { "src": "/(.*\\.(css|js|png|jpg|gif|html|ico))", "dest": "/public/$1" },
    
    { "src": "/api/(.*)", "dest": "server.js" }
  ]
}